<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.example.kaiste.developerslist.SplashScreen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:textColor="@color/icons"
        android:id="@+id/mainText"
        android:text="GitHub Developers"/>

    <ImageView
        android:layout_below="@+id/mainText"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:id="@+id/logo"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_github_icon"
        android:tint="@color/icons"/>

    <TextView
        android:layout_below="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="180dp"
        android:textColor="@color/icons"
        android:id="@+id/lagos"
        android:text="Lagos"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="#E0A0EB"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/icons"
            android:layout_alignParentLeft="true"
            android:text="\@Andela_Nigeria"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/icons"
            android:layout_alignParentRight="true"
            android:text="\@codecheeter"/>
    </RelativeLayout>

</RelativeLayout>
